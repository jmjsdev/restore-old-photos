{
  "$schema": "https://raw.githubusercontent.com/nicegram/nicetauri/refs/heads/main/crates/tauri-utils/schema.json",
  "productName": "Old Photos Restorer",
  "version": "1.0.0",
  "identifier": "com.oldphotos.desktop",
  "build": {
    "devUrl": "http://localhost:3001",
    "frontendDist": "http://localhost:3001"
  },
  "app": {
    "windows": [
      {
        "title": "Old Photos Restorer",
        "width": 1280,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "nsis": {
        "installMode": "perMachine"
      }
    }
  }
}
